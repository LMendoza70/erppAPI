                                </wsdlFiles>
                                <packageName>com.gisnet.erpp.ws.firma1.client</packageName>
                                <sourceDestDir>${basedir}/target/generated-sources-fe1/java</sourceDestDir>
                                <vmArgs>
                                    <vmArg>-Djavax.xml.accessExternalSchema=all</vmArg>
                                </vmArgs>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
